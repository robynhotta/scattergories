			<label>Fruit or Vegetable</label>
			<input type="text" name="fruit" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Movie Title</label>
			<input type="text" name="movie" placeholder="Enter answer here!">
		
		</div>
		<div class="form-group">
			<label>City</label>
			<input type="text" name="city" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Colour</label>
			<input type="text" name="colour" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Restaurant</label>
			<input type="text" name="restaurant" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>App</label>
			<input type="text" name="app" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Harry Potter Reference</label>
			<input type="text" name="harry" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Brand of Alcohol</label>
			<input type="text" name="alcohol" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Book Title</label>
			<input type="text" name="book" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Article of Clothing</label>
			<input type="text" name="clothing" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Something you'd find at the beach</label>
			<input type="text" name="beach" placeholder="Enter answer here!">
		</div>
		<div class="form-group">
			<label>Name that has more than 5 letters</label>
			<input type="text" name="name" placeholder="Enter answer here!">
		</div>		
	</form>

